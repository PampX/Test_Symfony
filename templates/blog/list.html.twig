{% extends 'base.html.twig' %}

{% block title %}Liste des articles{% endblock %}

{% block body %}
    <h1>Articles</h1>
    <ul>
        {% for article in articles %}
            <li>
                <a href="{{ path('article_show', { slug: article.slug }) }}">
                    {{ article.title }}
                </a>
            </li>
        {% endfor %}
    </ul>
{% endblock %}
